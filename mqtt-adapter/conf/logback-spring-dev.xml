<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <property name="LOG_HOME" value="/var/log/iot_core/nip/adapter/mqtt"/>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>${HOSTNAME} %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{30} [%method]:%line - %msg%n</pattern>
        </encoder>
    </appender>
    
     <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/iot_core_nip_adapter_mqtt.%d{yyyy-MM-dd}.log</FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{30} [%method]:%line - %msg%n</pattern>
        </encoder>
<!--
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>10MB</MaxFileSize>
        </triggeringPolicy>
-->
    </appender>

    <logger name="org.springframework" level="ERROR"/>
    <logger name="org.apache.kafka" level="ERROR"/>
    <logger name="org.eclipse.jetty" level="ERROR"/>
    <logger name="org.hibernate" level="ERROR"/>
    <logger name="com.couchbase" level="ERROR"/>
    <logger name="com.zaxxer" level="ERROR"/>
    <logger name="org.mybatis" level="ERROR"/>
    <logger name="io.netty" level="ERROR"/>
    <logger name="io.lettuce" level="ERROR"/>
    <logger name="springfox" level="ERROR"/>
<!--    
    <logger name="com.hpe.iot.core.nip.adapter.mqtt" level="DEBUG">
		<appender-ref ref="FILE" />
	</logger>
-->
    <root level="DEBUG">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT" />
    </root>
</configuration>